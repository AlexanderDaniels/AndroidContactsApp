<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alex.addressbook">
    <uses-sdk android:minSdkVersion="14"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".activities.MainMenu" android:label="Address Book Choice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.CreateContact" android:label="Create Contact"/>
        <activity android:name=".activities.ViewContacts" android:label="View Contacts"/>
        <activity android:name=".activities.ListViewCon" android:label="All Contacts"/>

    </application>
</manifest>
